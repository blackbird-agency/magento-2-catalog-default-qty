<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="cataloginventory">
            <group id="options">
                <field id="customize_debug_mode" translate="label comment" type="select" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="100">
                    <label>Products Default Qty on Storefront</label>
                    <comment>The default quantity to apply to the product on the storefront.</comment>
                    <frontend_model>Blackbird\CatalogDefaultQty\Block\Adminhtml\Config\Form\Field\DefaultQtyMap</frontend_model>
                    <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                    <config_path>cataloginventory/options/default_qty</config_path>
                </field>
            </group>
        </section>
    </system>
</config>
